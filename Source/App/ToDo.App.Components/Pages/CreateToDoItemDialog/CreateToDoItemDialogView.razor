@inherits MvvmComponentBase<CreateToDoItemDialogViewModel>
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Create ToDo</MudText> 
    </TitleContent>
    <DialogContent>
        <MudForm>
            <MudTextField @bind-Value="@BindingContext.Text" For="@(() => BindingContext.Text)" Label="Text" Immediate="true" Validation="@BindingContext.Validator.Validation"/>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Error" OnClick="@BindingContext.Cancel">Cancel</MudButton>
        <MudSpacer/>
        <MudButton Color="Color.Primary" OnClick="@BindingContext.CreateToDoItem">Save</MudButton>
    </DialogActions>
</MudDialog>

@code{

    [CascadingParameter]
    public MudDialogInstance DialogInstance { get; set; } = null!;
}